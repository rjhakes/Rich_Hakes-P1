@model StoreMVC.Models.LoginVM

@{
    ViewData["Title"] = "Login";
}

<h1>Customer</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<footer>
    <div>
        <ul class="navbar-nav flex-grow-1" style="justify-content: flex-end">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Manager" asp-action="Login" style="justify-content: flex-end">|Admin|</a>
            </li>
        </ul>
    </div>
    @*| @Html.ActionLink("Admin", "/Manager/Login") |*@
</footer>
